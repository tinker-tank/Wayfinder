    <UserControl x:Class="AnyPlace.PoisControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="280">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
            <Grid Background="#FF0B0B0C" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ProgressBar Grid.Row="0" Grid.ColumnSpan="2" x:Name="pb_procress" IsIndeterminate="True" Height="10"/>
                <Button x:Name="btn_source" Grid.Row="1" Grid.Column="1" Margin="2" Width="70" Height="70" BorderBrush="{x:Null}" BorderThickness="3" Style="{StaticResource ButtonStyle2}">
                    <Button.Background>
                        <ImageBrush ImageSource="/Assets/Navigation/set_source.png"/>
                    </Button.Background>
                </Button>
                <Button x:Name="btn_navigateHere" Grid.Row="1" Grid.Column="2" Margin="2" Width="70" Height="70" BorderBrush="{x:Null}" BorderThickness="3" Style="{StaticResource ButtonStyle2}">
                    <Button.Background>
                        <ImageBrush ImageSource="/Assets/Navigation/navigate_here.png"/>
                    </Button.Background>
                </Button>

                <Grid Grid.Row="1" x:Name="grid_details">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Foreground="White" TextTrimming="WordEllipsis" x:Name="txt_location" Text="Cyprus" FontSize="18" Margin="5,10,0,0"/>
                    <TextBlock Foreground="White"  Grid.Row="1" x:Name="txt_distance" Text="here" FontSize="12" Margin="5,5,0,0"/>
                </Grid>
            </Grid>

        </Grid>
        <Grid Height="21" Grid.Row="1" >
            <Path Data="M253.731,171.642 C255.224,171.642 359.702,171.642 359.702,171.642 C304.478,232.836 304.478,231.343 304.478,231.343 C304.478,231.343 252.238,171.642 253.731,171.642 z" Fill="#FF0B0B0C" Height="19.705" Stroke="Black" UseLayoutRounding="False" VerticalAlignment="Top" Width="30" Stretch="Fill" />
        </Grid>
    </Grid>
</UserControl>